pipeline {
    agent {
        label 'Node2'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                echo 'Building docker image'
                dir('apis/userprofile/') {
                	sh 'pwd'
                	sh 'sudo docker build -t willido/userprofile:2.0 .'
		}
            }
        }
    }
}
