pipeline {
    agent {
        label 'Node3'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                echo 'Building docker image'
                dir('apis/userprofile/') {
                	sh 'pwd'
                	sh 'docker build -t willido/userprofile:3.0 .'
		}
            }
        }
    }
}
